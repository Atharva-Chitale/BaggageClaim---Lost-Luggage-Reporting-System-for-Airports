<!DOCTYPE html>
<html lang="en">
<head>
  <title>Your Requests | BaggageClaim</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h2>Your Lost Luggage Requests</h2><br>
    <a href="/logout" class="btn btn-danger float-end">Logout</a>
    <a href="/chat" class="btn btn-primary ms-2">Chat with Admin</a>
    <br><br>
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>Description</th>
          <th>Color</th>
          <th>Status</th>
          <th>Reported Date</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% luggages.forEach(l => { %>
          <tr>
            <td><%= l.description %></td>
            <td><%= l.color %></td>
            <td><%= l.status %></td>
            <td><%= l.date ? l.date.toDateString() : '' %></td>
            <td>
                <a href="/edit_data/<%=l._id%>" class="btn btn-secondary mt-3">Edit</a>
            </td>
            <td>
              <form action="/delete_data/<%=l._id%>" method="post">
                <button class="btn btn-danger mt-3">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <form action="/report" method="GET">
      <button class="btn btn-warning mt-3">Submit Report</button>
    </form>
  </div>
</body>
</html>
