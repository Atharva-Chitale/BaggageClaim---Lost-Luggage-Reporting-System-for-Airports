<!DOCTYPE html>
<html lang="en">
<head>
  <title>Report Lost Luggage</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <a href="/logout" class="btn btn-danger mb-4">Logout</a>
    <h2>Edit Lost Luggage</h2>
    <form action="/edit_data/<%=luggage._id%>" method="POST">
      <div class="mb-3">
        <label class="form-label">Description</label>
        <input class="form-control" type="text" name="description" value="<%=luggage.description%>" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Color</label>
        <input class="form-control" type="text" name="color" value="<%=luggage.color%>"">
      </div>
      <div class="mb-3">
        <label class="form-label">Stickers/Tags</label>
        <input class="form-control" type="text" name="stickers" value="<%=luggage.stickers%>">
      </div>
      <div class="mb-3">
        <label class="form-label">Airline</label>
        <input class="form-control" type="text" name="airline" value="<%=luggage.airline%>">
      </div>
      <div class="mb-3">
        <label class="form-label">Date Lost</label>
        <% const formattedDate = new Date(luggage.date).toISOString().split('T')[0]; %>
        <input class="form-control" type="date" name="date" value="<%=formattedDate%>"   max="<%=formattedDate%>" required>
      </div>
      <button class="btn btn-success">Submit Report</button>
    </form>
  </div>
</body>
</html>
