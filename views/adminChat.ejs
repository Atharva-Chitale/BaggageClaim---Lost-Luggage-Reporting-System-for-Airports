<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
  <div class="container my-5">
    <h2 class="mb-4 text-center">All User Chats</h2>

    <% chats.forEach(chat => { %>
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">User: <%= chat.user.username %></h5>
          
          <ul class="list-group list-group-flush mb-3">
            <% chat.messages.forEach(msg => { %>
              <li class="list-group-item">
                <strong><%= msg.sender %>:</strong> <%= msg.text %>
              </li>
            <% }) %>
          </ul>

          <form action="/adminChat/<%= chat._id %>" method="POST" class="d-flex">
            <input type="text" name="message" class="form-control me-2" required placeholder="Reply...">
            <button type="submit" class="btn btn-primary">Send</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</body>
